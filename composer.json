{
    "name": "decodelabs/indoctrination",
    "description": "Doctrine DBAL and ORM integration tools",
    "type": "library",
    "keywords": [ ],
    "license": "MIT",
    "authors": [ {
            "name": "Tom Wright",
            "email": "tom@inflatablecookie.com"
        } ],
    "require": {
        "php": "^8.4",

        "decodelabs/coercion": "^0.2.15",
        "decodelabs/dovetail": "^0.2.9",
        "decodelabs/exceptional": "^0.5.3",
        "decodelabs/guidance": "^0.1.13",
        "decodelabs/slingshot": "^0.1.12",
        "decodelabs/stash": "^0.6",
        "decodelabs/veneer": "^0.12.3",

        "doctrine/orm": "^3.3.2",
        "doctrine/dbal": "^4.2.2",
        "doctrine/migrations": "^3.8.2"
    },
    "require-dev": {
        "decodelabs/cipher": "^0.2",
        "decodelabs/clip": "^0.3.16",
        "decodelabs/genesis": "^0.10",
        "decodelabs/phpstan-decodelabs": "^0.7",

        "martin-georgiev/postgresql-for-doctrine": "^2.8",
        "nesbot/carbon": "^2|^3"
    },
    "suggest": {
        "decodelabs/cipher": "JWT token support",
        "decodelabs/clip": "Command line tools",
        "martin-georgiev/postgresql-for-doctrine": "Extended PostgreSQL support for Doctrine",
        "nesbot/carbon": "Better Date/time handling"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Indoctrination\\": "src/Indoctrination/"
        },
        "classmap": [
            "src/Clip/",
            "src/Dovetail/"
        ],
        "files": [
            "src/Indoctrination/Context.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.3.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
